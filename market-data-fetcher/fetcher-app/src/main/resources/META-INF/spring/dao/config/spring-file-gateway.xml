<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="fileXlsCurrencyPairGateway"
		class="com.finaxys.finaxysplatform.marketdatafetcher.dao.integration.file.FileCurrencyPairGateway">
		<constructor-arg name="contentType"
			value="#{T(com.finaxys.finaxysplatform.core.domain.Enum.ContentType).XLS}" />
		<constructor-arg name="parser" ref="fileXlsCurrencyPairsParser" />
	</bean>
	
	<bean id="fileXlsExchangeGateway"
		class="com.finaxys.finaxysplatform.marketdatafetcher.dao.integration.file.FileExchangeGateway">
		<constructor-arg name="contentType"
			value="#{T(com.finaxys.finaxysplatform.core.domain.Enum.ContentType).XLS}" />
		<constructor-arg name="parser" ref="fileXlsExchangesParser" />
	</bean>
	<bean id="fileXlsIndexGateway"
		class="com.finaxys.finaxysplatform.marketdatafetcher.dao.integration.file.FileIndexGateway">
		<constructor-arg name="contentType"
			value="#{T(com.finaxys.finaxysplatform.core.domain.Enum.ContentType).XLS}" />
		<constructor-arg name="parser" ref="fileXlsIndexesParser" />
	</bean>
	<bean id="fileXlsInterbankRateGateway"
		class="com.finaxys.finaxysplatform.marketdatafetcher.dao.integration.file.FileInterbankRateGateway">
		<constructor-arg name="contentType"
			value="#{T(com.finaxys.finaxysplatform.core.domain.Enum.ContentType).XLS}" />
		<constructor-arg name="parser" ref="fileXlsInterbankRatesParser" />
	</bean>
	<bean id="fileXlsInterbankRateDataGateway"
		class="com.finaxys.finaxysplatform.marketdatafetcher.dao.integration.file.FileInterbankRateDataGateway">
		<constructor-arg name="contentType"
			value="#{T(com.finaxys.finaxysplatform.core.domain.Enum.ContentType).XLS}" />
		<constructor-arg name="histDataParser"
			ref="fileXlsHistInterbankRateDataParser" />
	</bean>

	<bean id="fileXlsStockGateway"
		class="com.finaxys.finaxysplatform.marketdatafetcher.dao.integration.file.FileStockGateway">
		<constructor-arg name="contentType"
			value="#{T(com.finaxys.finaxysplatform.core.domain.Enum.ContentType).XLS}" />
		<constructor-arg name="parser" ref="fileXlsStocksParser" />
	</bean>

	<bean id="fileXlsOptionGateway"
		class="com.finaxys.finaxysplatform.marketdatafetcher.dao.integration.file.FileOptionGateway">
		<constructor-arg name="contentType"
			value="#{T(com.finaxys.finaxysplatform.core.domain.Enum.ContentType).XLS}" />
		<constructor-arg name="parser" ref="fileXlsOptionsParser" />
	</bean>



</beans>